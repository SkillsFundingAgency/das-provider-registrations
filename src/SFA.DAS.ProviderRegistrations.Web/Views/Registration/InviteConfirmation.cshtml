@using SFA.DAS.ProviderRegistrations.Web.Extensions
@{
    ViewData["Title"] = "Manage apprenticeships";
    ViewBag.GaData.Vpv = "/registrations/registration/invite-confirmation";
    ViewBag.ZenDeskLabel = "preg-The-employer-account-is-ready-for-them-to-complete";
    var inError = ViewBag.InValid ?? false;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Invitation sent to employer
            </h1>
        </div>
        <form id="ConfirmInvite" novalidate method="post" action="@Url.ProviderAction("InviteConfirmation")">
            @Html.AntiForgeryToken()
            <div class="govuk-form-group @(inError ? "govuk-form-group--error" : "")">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            What do you want to do next?
                        </h1>
                    </legend>
                    @if (inError)
                    {
                        <span class="field-validation-error govuk-error-message">Please select an option to continue</span>
                    }
                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="employer-confirmation" name="action" type="radio" value="Invite">
                            <label class="govuk-label govuk-radios__label" for="employer-confirmation">
                                Invite another employer to create an account
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="employer-confirmation-3" name="action" type="radio" value="View">
                            <label class="govuk-label govuk-radios__label" for="employer-confirmation-3">
                                View invited employers
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="employer-confirmation-2" name="action" type="radio" value="Homepage">
                            <label class="govuk-label govuk-radios__label" for="employer-confirmation-2">
                                Return to homepage
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button">Continue</button>
        </form>
    </div>
</div>